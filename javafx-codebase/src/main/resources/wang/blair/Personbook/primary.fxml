            <ToggleButton fx:id="btnView" mnemonicParsing="false" onAction="#userDidClickView" selected="true" text="View" />
            <ToggleButton fx:id="btnEdit" mnemonicParsing="false" onAction="#userDidClickEdit" text="Edit" />
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#userDidClickNew" text="Save" />
         </items>
      </ToolBar>
   </top>
   <left>
      <ListView fx:id="myListView" prefHeight="560.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <AnchorPane prefHeight="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="23.0" layoutY="27.0" spacing="20.0">
               <children>
                  <VBox prefHeight="55.0" prefWidth="314.0" spacing="10.0">
                     <children>
                        <Label text="Full Name">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtFullName" editable="false" onKeyTyped="#userDidUpdateFullName" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Birthday">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <FlowPane hgap="10.0">
                           <children>
                              <TextField fx:id="txtBdayDay" editable="false" prefHeight="26.0" prefWidth="60.0" />
