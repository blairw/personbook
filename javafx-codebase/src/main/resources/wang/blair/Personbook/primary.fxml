                              <TextField fx:id="txtBdayMonth" editable="false" prefHeight="26.0" prefWidth="60.0" />
                              <Label text="(month)" />
                              <TextField fx:id="txtBdayYear" editable="false" prefHeight="26.0" prefWidth="60.0" />
                              <Label text="(year)" />
                           </children>
                        </FlowPane>
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Relationship Type">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <CheckBox fx:id="chkPersonal" disable="true" mnemonicParsing="false" text="Important for personal reasons" />
                        <CheckBox fx:id="chkBusiness" disable="true" mnemonicParsing="false" text="Important for business reasons" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Case Notes">
                           <font>
                              <Font size="16.0" />
                           </font>
